# NovaOS V2 Production Environment Variables
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to git!

# === REQUIRED ===

# Anthropic API Key (from console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-api03-...

# Database URL (provided by Render.com automatically)
DATABASE_URL=postgresql://user:password@host:5432/novaos_production

# Security Master Password (generate a strong password!)
NOVAOS_MASTER_PASSWORD=your-very-secure-password-here

# === TELEGRAM BOT (Required for remote control) ===

# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Your Telegram user ID (get from @userinfobot)
TELEGRAM_ADMIN_CHAT_ID=123456789

# === OPTIONAL (For enhanced features) ===

# Gumroad API Key (for Digital Product Creator agent)
# Get from: https://gumroad.com/settings/advanced
GUMROAD_API_KEY=

# SendGrid API Key (for Lead Generator agent)
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=

# Twitter API (for trending topics)
TWITTER_BEARER_TOKEN=

# === SECURITY SETTINGS ===

# Security level: PERMISSIVE | BALANCED | STRICT | PARANOID
NOVAOS_SECURITY_LEVEL=STRICT

# Budget limits (dollars) - AGGRESSIVE MODE
NOVAOS_DAILY_BUDGET=200.0       # Increased from $50 to $200 for 10X operation
NOVAOS_HOURLY_BUDGET=30.0       # Increased from $10 to $30
NOVAOS_EMERGENCY_THRESHOLD=250.0  # Increased from $75 to $250

# === SYSTEM SETTINGS ===

# Flask
FLASK_ENV=production
SECRET_KEY=your-flask-secret-key-here

# Logging
LOG_LEVEL=INFO

# === REVENUE AGENT SETTINGS (AGGRESSIVE MODE) ===

# Digital Product Creator (5 instances)
PRODUCT_CREATOR_RUN_INTERVAL=1800  # 30 minutes (was 6 hours)
PRODUCT_CREATOR_BUDGET=15.0        # $15 per run (was $5)

# Content Arbitrage (3 instances)
CONTENT_ARBITRAGE_RUN_INTERVAL=300  # 5 minutes (was 2 hours)
CONTENT_ARBITRAGE_BUDGET=25.0       # $25 per run (was $10)
CONTENT_ARBITRAGE_MIN_PROFIT=5.0

# Lead Generator (10 instances)
LEAD_GENERATOR_RUN_INTERVAL=900     # 15 minutes (was 4 hours)
LEAD_GENERATOR_BUDGET=10.0          # $10 per run (was $3)
LEAD_GENERATOR_TARGET_INDUSTRY=SaaS
LEAD_GENERATOR_LEADS_PER_CYCLE=25   # 25 per cycle (was 10)
