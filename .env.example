# NovaOS V2 Environment Configuration

# ====================================
# CORE SETTINGS
# ====================================
NOVAOS_ENV=production
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ====================================
# AUTONOMOUS ENGINE
# ====================================
AUTONOMOUS_ENABLED=false
MAX_DAILY_BUDGET=100.0
MIN_ROI_THRESHOLD=150.0
SCALE_ROI_THRESHOLD=300.0
KILL_ROI_THRESHOLD=0.0
REQUIRE_APPROVAL_ABOVE=50.0

# ====================================
# STRIPE INTEGRATION
# ====================================
STRIPE_API_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ====================================
# GUMROAD INTEGRATION
# ====================================
GUMROAD_ACCESS_TOKEN=your_gumroad_access_token

# ====================================
# SENDGRID INTEGRATION
# ====================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=NovaOS

# ====================================
# TWITTER INTEGRATION
# ====================================
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# ====================================
# DATABASE (Optional)
# ====================================
DATABASE_URL=sqlite:///data/novaos.db

# ====================================
# MONITORING
# ====================================
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn

# ====================================
# WORKER SETTINGS
# ====================================
WORKER_RUN_INTERVAL=60
WORKER_MAX_CRASHES=5
WORKER_CRASH_COOLDOWN=300
WORKER_AUTO_RESTART=true

# ====================================
# DEPLOYMENT
# ====================================
DEPLOY_TARGET=local
# Options: local, docker, aws, gcp, azure

# AWS (if using AWS deployment)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ====================================
# DASHBOARD
# ====================================
DASHBOARD_PORT=5001
DASHBOARD_HOST=0.0.0.0
